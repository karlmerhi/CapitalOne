
  <div class="row">
    <div class="col-md-12">

      <h2>Add&nbsp;Transaction</h2>

      <br />

      <form method="post" action="addTransaction">

        <fieldset>
          <legend>Transaction&nbsp;Information</legend>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                <label for="date">Date</label>
                <input
                  class="form-control"
                  id="date"
                  name="date"
                  type="date"
                  max={{date}}
                  required
                />
              </div>
            </div>
          </div>
          
          <div class="row">
            <div class="col-md-3">
              <div class="form-group">
                <label for="merchant_code">Merchant</label>
                  <select
                    class="form-control"
                    name="merchant_code"
                    id="merchant_code" required>
                    <option value="" disabled selected>Select your option</option>
                      <option value="sportchek">SportChek</option>
                      <option value="tim_hortons">Tim Hortons</option>
                      <option value="subway">Subway</option>
                      <option value="other">Other</option>
                  </select>
              </div>
            </div>

            <div class="col-md-3">
              <div class="form-group">
                <label for="amount_cents">Cost&nbsp;Amount:</label>
                <input
                  class="form-control"
                  id="amount_cents"
                  name="amount_cents"
                  type="number"
                  step="0.01"
                  min="0"
                  max="7000"
                  required
                />
              </div>
            </div>

        </fieldset>

        <hr />

        <input
          type="submit"
          class="btn btn-primary pull-right"
          value="Add Transaction"
        /><br /><br /><br />

      </form>
    </div>
  </div>
